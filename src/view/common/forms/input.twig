<div class="inputBloc {% if input.type != 'hidden' %} {{ input.size | default('col-12') }} {% endif %}">
    <label for="{{ input.key }}">{{ input.label | lang }}</label>
    <div class="{% if input.type != 'hidden' %} inputWithIcon global_input {% endif %}">
        <input
                type="{{ input.type  | default('text') }}"
                name="{{ input.key }}"
                id="{{ input.key }}"
                placeholder="{{ input.placeholder }}"
                value="{{ attribute(datas, input.key) }}"

                {% if hideErrorMessageAtStart == true %} data-hide-error-at-parse="true" {% endif %}

                data-validation-list-contrainte="{{ input.getContrainteForJS | join(',') }}"
        >
        <label for="{{ input.key }}">
            <i class="{{ input.icon }}" aria-hidden="true"></i>
        </label>
    </div>
</div>